/* componets/date/date.wxss */

.date {
    position: relative;
    width: 460rpx;
    height: 460rpx;
    padding: 10rpx 20rpx;
    background-color: #336e72;
    font-size: 14px;
    color: #fff;
}

.date image {
    width: 50rpx;
    height: 50rpx;
    margin: 0 6rpx;
}

.date .date_top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 10rpx 0 20rpx;
}

.date .date_week {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin: 10rpx 0;
}

.date .date_week text {
    width: calc(100% / 7);
    text-align: center;
}

.date .date_content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-content: center;
}

.date .date_content text {
    display: block;
    width: calc(100% / 7);
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    margin: 10rpx 0;
}

.date .date_content text.on {
    background-color: #00b7c3;
}

.date .date_content text.other {
    color: rgba(255, 255, 255, 0.5);
}

.date .date_content text.ch {
    background-color: #a5ec88;
    color: #fff;
}
